<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.is1.dal.entity.Location" table="locations">
        <id name="id" column="id" type="long">
            <generator class="identity"/>
        </id>

        <property name="x" column="x" type="integer" not-null="true"/>
        <property name="y" column="y" type="long"/>
        <property name="z" column="z" type="long"/>

        <bag name="persons" table="persons" inverse="true" cascade="all-delete-orphan">
            <key column="location_id"/>
            <one-to-many class="ru.is1.dal.entity.Person"/>
        </bag>
    </class>
</hibernate-mapping>