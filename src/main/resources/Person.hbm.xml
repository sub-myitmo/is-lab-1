<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.is1.dal.entity.Person" table="persons">
        <id name="id" column="id" type="long">
            <generator class="identity"/>
        </id>

        <property name="name" column="name" type="string" not-null="true"/>
        <property name="creationDate" column="creation_date" type="java.time.LocalDateTime" not-null="true"/>
        <property name="eyeColor" column="eye_color" type="color_enum" not-null="true"/>
        <property name="hairColor" column="hair_color" type="color_enum"/>
        <property name="height" column="height" type="int" not-null="true"/>
        <property name="weight" column="weight" type="int" not-null="true"/>
        <property name="passportID" column="passport_id" type="string" not-null="true" unique="true"/>
        <property name="nationality" column="nationality" type="country_enum" not-null="true"/>

        <many-to-one name="coordinates" class="ru.is1.dal.entity.Coordinates" column="coordinates_id" not-null="true" fetch="select"/>
        <many-to-one name="location" class="ru.is1.dal.entity.Location" column="location_id" not-null="true" fetch="select"/>
    </class>
</hibernate-mapping>